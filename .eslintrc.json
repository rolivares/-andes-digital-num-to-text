{
  "env": {
    "commonjs": true,
    "browser": false,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:json/recommended",
    "plugin:security/recommended",
    "plugin:anti-trojan-source/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "root": true,
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-expressions": "off",
    "no-console": 2,
    "no-useless-constructor": 0,
    "import/extensions": 0,
    "class-methods-use-this": 0,
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error",
    "@typescript-eslint/unbound-method": 0,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "max-len": [
      "error",
      150,
      2
    ],
    "import/order": [
      1,
      {
        "groups": [
          "external",
          "builtin",
          "internal",
          "sibling",
          "parent",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@headers/**",
            "group": "internal"
          },
          {
            "pattern": "@validator/**",
            "group": "internal"
          }
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "alias": {
        "extensions": [
          ".ts"
        ],
        "map": [
          [
            "@headers",
            "./src/headers"
          ],
          [
            "@validator",
            "./src/validator"
          ]
        ]
      }
    }
  },
  "ignorePatterns": [
    "node_modules/**"
  ]
}
